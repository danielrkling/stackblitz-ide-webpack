{
	"compilerOptions": {
		"sourceMap": true,
		"module": "ES6",
		"moduleResolution": "node",
		"target": "ES6",
		"outDir": "./dist",
		"lib": ["dom","DOM.Iterable", "ESNext"],
		"types": ["wicg-file-system-access","filesystem"],
		"baseUrl": "./node_modules",
		"jsx": "preserve",
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}